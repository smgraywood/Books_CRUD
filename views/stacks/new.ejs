			<h2 class="add-title">Add A New Stack</h2>
			<form action="/stacks" method="POST" class="add-form">
				<table id="add-stack-table">
					<tr>
						<label>
							<th>Name</th>
							<td><input type="text" name="name" /></td>
						</label>
					</tr>
				</table>
				<br />
				<button class="add-new-button" type="submit">Add Stack</button>
			</form>
		</div>
		<div id="all-pages-plant-div">
			<img
				class="large-plant-all-pages"
				src="../images/large-plant.png"
				alt="a large cartoon monstera plant in a blue pot"
			/>
		</div>

		<%- include("../partials/footer") %>
	</body>
