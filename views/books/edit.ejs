<!DOCTYPE html>
<html>
	<%- include ('../partials/head') %>
	<body>
		<div id="logo-logout-container" >
            <img
            src="/images/logo.png"
            class="logo"
            alt="An image of the logo for Stacks. A round yellow logo with 3 white rectangles stacked horizontally with the word 'Stacks' above"
        />
        <a href="/logout" id="logout-anchor"><button id="logout">Logout</button></a>
        </div>
		<section class="books-on-shelf">
			<div id="stack-container">
				<div class="book-in-stack" id="book-1"></div>
				<div class="book-in-stack" id="book-2">
					<a href="/books"><button id="stack-button">ALL THE BOOKS</button></a>
				</div>
				<div class="book-in-stack" id="book-3"></div>
			</div>

			<img
				src="/images/small-plant.png"
				alt="a small cartoon pothos plant in a brown pot"
				id="small-plant"
			/>

			<div id="stack-container">
				<div class="book-in-stack" id="book-1"></div>
				<div class="book-in-stack" id="book-2">
					<a href="/stacks"><button id="stack-button">ALL THE STACKS</button></a>
				</div>
				<div class="book-in-stack" id="book-3"></div>
			</div>
		</section>
		<div class="shelf"></div>
        <div id="spacing"></div>
		<div class="form-container">
			<h2 id="edit-book">Edit Book</h2>
			<form action="/books/<%= book._id %>" method="POST">
				<table>
                    <tr>
                        <label>
                            <th>Title</th>
                            <td><input type="text" name="title" value="<%= book.title %>"/></td>
                        </label>
                    </tr>
                    <tr>
                        <label>
                        <th>Author</th>
                        <td><input type="text" name="author" value="<%= book.author %>"/></td>
                        </label>
                    </tr>
                    <tr>
                        <label>
                        <th>Genre</th>  
                        <td><select name="genre" value="" selected>
                            <option value="Action & Adventure">Action & Adventure</option>
                            <option value="Art & Photography">Art & Photography</option>
                            <option value="Biography">Biography</option>
                            <option value="Children">Children</option>
                            <option value="Dystopian">Dystopian</option>
                            <option value="Fantasy">Fantasy</option>
                            <option value="Food & Drink">Food & Drink</option>
                            <option value="Graphic Novel">Graphic Novel</option>
                            <option value="History">History</option>
                            <option value="Historical Fiction">Historical Fiction</option>
                            <option value="Horror">Horror</option>
                            <option value="Memoir & Autobiography">Memoir & Autobiography</option>
                            <option value="Mystery">Mystery</option>
                            <option value="Religion & Spirituality">Religion & Spirituality</option>
                            <option value="Romance">Romance</option>
                            <option value="Science Fiction">Science Fiction</option>
                            <option value="Science & Technology">Science & Technology</option>
                            <option value="Self-Help">Self-Help</option>
                            <option value="Short Story">Short Story</option>
                            <option value="Thriller & Suspense">Thriller & Suspense</option>
                            <option value="Travel">Travel</option>
                        </select>
                    </label></td>
                    </tr>
                    <tr>
                    <label>
                        <th>Rating</th> 
                        <td><input type="number" name="rating" value="<%= book.rating %>"/></td>
                    </label>
                    </tr>
                    <tr>
                        <label>
                            <th>Review</th> 
                            <td><input type="text" name="review" value="<%= book.review %>"/></td>
                        </label>
                    </tr>
                    <tr>
                        <label>
                            <th>Favorite Quote</th>
                            <td><input type="text" name="favoriteQuote" value="<%= book.favoriteQuote %>"/></td>
                        </label>
                    </tr>
			    </table>
                <br>
                <button type="submit" id="show-update-button">Edit Book</button>
            </form>
		</div>
        <div id="all-pages-plant-div">
		<img
			class="large-plant-all-pages"
			src="/images/large-plant.png"
			alt="a large cartoon monstera plant in a blue pot"
		/>
        </div>
        <%- include("../partials/footer") %>
	</body>
</html>